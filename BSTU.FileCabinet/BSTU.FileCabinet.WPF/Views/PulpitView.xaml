<UserControl x:Class="BSTU.FileCabinet.WPF.Views.PulpitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BSTU.FileCabinet.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <ListView ItemsSource="{Binding Pulpits}" 
                  SelectedItem="{Binding SelectedValue}" 
                  Foreground="White"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  Grid.Column="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=PulpitCode}">
                        <TextBlock Text="Код" Style="{StaticResource TextBlockCommonStyle}" 
                                       HorizontalAlignment="Center"/>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=PulpitName}">
                        <TextBlock Text="Название" Style="{StaticResource TextBlockCommonStyle}"
                                       HorizontalAlignment="Center"/>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Column="1">
            <StackPanel  
                    DataContext="{Binding SelectedValue}"
                    VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Left" 
                        Orientation="Horizontal">
                    <TextBlock Text="Код"
                           Style="{StaticResource TextBlockAdminStyle}"
                           Margin="5"/>
                    <TextBox Text="{Binding PulpitCode}" 
                           Style="{StaticResource TextBoxAdminStyle}"
                           Margin="5"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" 
                        Orientation="Horizontal">
                    <TextBlock Text="Название" 
                           Style="{StaticResource TextBlockAdminStyle}"
                           Margin="5"/>
                    <TextBox Text="{Binding PulpitName}" 
                           Style="{StaticResource TextBoxAdminStyle}"
                           Margin="5"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" 
                        Orientation="Horizontal">
                    <TextBlock Text="Факультет" 
                           Style="{StaticResource TextBlockAdminStyle}"
                           Margin="5"/>
                    <TextBox Text="{Binding FacultyCode}" 
                           Style="{StaticResource TextBoxAdminStyle}"
                           Margin="5"/>
                </StackPanel>
            </StackPanel>
            <StackPanel VerticalAlignment="Bottom">
                <Button Command="{Binding Create}" 
                        Content="Добавить"
                        Style="{StaticResource CommonButtonStyle}"/>
                <Button Command="{Binding Update}" 
                        Content="Обновить"
                        Style="{StaticResource CommonButtonStyle}"/>
                <Button Command="{Binding Delete}" 
                        Content="Удалить"
                        Style="{StaticResource CommonButtonStyle}"/>
                <Button Command="{Binding Export}" 
                        Content="Экспорт"
                        Style="{StaticResource CommonButtonStyle}"/>
                <Button Command="{Binding Import}" 
                        Content="Импорт"
                        Style="{StaticResource CommonButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
