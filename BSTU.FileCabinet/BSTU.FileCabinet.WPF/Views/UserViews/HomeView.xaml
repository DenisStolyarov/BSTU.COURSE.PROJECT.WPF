<UserControl x:Class="BSTU.FileCabinet.WPF.Views.UserViews.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BSTU.FileCabinet.WPF.Views.UserViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.7*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0">
            <Image Source="{Binding SelectedImage}" Width="100"/>
        </Border>
        <StackPanel  
                    DataContext="{Binding CurrentStudent}"
                    VerticalAlignment="Center" 
                    Grid.Row="1">
            <TextBlock Text="{Binding FirstName}"/>
            <TextBlock Text="{Binding LastName}"/>
            <TextBlock Text="{Binding Patronymic}"/>
            <TextBlock Text="{Binding PhoneNumber}"/>
            <TextBlock Text="{Binding Birthday}"/>
        </StackPanel>
    </Grid>
</UserControl>
